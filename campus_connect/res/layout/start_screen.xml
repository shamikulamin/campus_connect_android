<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_home"
    >
    
    <ImageView
    
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="40"
    android:background="@drawable/background_top"
  />
    <Button
    android:id="@+id/show_in_map"
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="20"
    android:padding="20dip"
    android:background="@drawable/selector_btn_notification_in_map"
  />
  <Button
    android:id="@+id/show_as_list"
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="20"
    android:padding="20dip"
    android:background="@drawable/selector_btn_notification_as_list"
  />
  <Button
    android:id="@+id/report_incident"
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="20"
    android:padding="20dip"
    android:background="@drawable/selector_btn_report_incident"
  />
  <!--<Button
    android:id="@+id/emergency_assitance"
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="20"
    android:padding="20dip"
    android:background="@drawable/selector_btn_emergency_assistance"
  />-->
</LinearLayout>